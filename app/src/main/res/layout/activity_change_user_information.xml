<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="br.edu.ifsp.tcc.apprepublic.view.EditUser">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_descricao_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/alterar_dados"
            android:textColor="@color/black"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/cabecalho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/containerComponentes"
            style="@style/ConteinerComponents"
            android:layout_width="358dp"
            android:layout_height="770dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_descricao_label"
            />

        <EditText
            android:id="@+id/edittext_Login"
            style="@style/Edit_Text"
            android:layout_marginTop="30dp"
            android:hint="@string/nome"
            android:textColorHint="@color/gray"
            android:inputType="text"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/containerComponentes"
            app:layout_constraintStart_toStartOf="@+id/containerComponentes"
            app:layout_constraintTop_toTopOf="@+id/containerComponentes" />

        <com.vicmikhailau.maskededittext.MaskedEditText
            android:id="@+id/edittext_Cpf"
            style="@style/Edit_Text"
            android:layout_marginTop="30dp"
            android:hint="@string/cpf"
            android:textColorHint="@color/gray"
            android:inputType="number"
            android:textColor="@color/black"
            app:mask="###.###.###-##"
            app:layout_constraintEnd_toEndOf="@+id/containerComponentes"
            app:layout_constraintStart_toStartOf="@+id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@+id/edittext_Login" />

        <com.vicmikhailau.maskededittext.MaskedEditText
            android:id="@+id/edittext_Tel"
            style="@style/Edit_Text"
            android:layout_marginTop="30dp"
            android:hint="@string/telefone"
            app:mask="(##)#####-####"
            android:textColorHint="@color/gray"
            android:inputType="phone"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/containerComponentes"
            app:layout_constraintStart_toStartOf="@+id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@+id/edittext_Cpf" />

        <com.vicmikhailau.maskededittext.MaskedEditText
            android:id="@+id/edittext_TexDtaNascimento"
            style="@style/Edit_Text"
            android:layout_marginTop="30dp"
            android:hint="@string/data_nascimento"
            android:textColorHint="@color/gray"
            android:inputType="date"
            app:mask="##/##/####"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/containerComponentes"
            app:layout_constraintStart_toStartOf="@+id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@+id/edittext_Tel" />

        <EditText
            android:id="@+id/edittext_email"
            style="@style/Edit_Text"
            android:layout_marginTop="30dp"
            android:hint="@string/email"
            android:textColorHint="@color/gray"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/containerComponentes"
            app:layout_constraintStart_toStartOf="@+id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@+id/edittext_TexDtaNascimento"
            android:autofillHints="" />

        <TextView
            android:id="@+id/textview_Genero_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/genero"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/containerComponentes"
            app:layout_constraintStart_toStartOf="@+id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@+id/edittext_email" />

        <Spinner
            android:id="@+id/spinner_Genero"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/spinner_background"
            app:layout_constraintEnd_toEndOf="@+id/containerComponentes"
            app:layout_constraintStart_toStartOf="@+id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@+id/textview_Genero_label"/>

        <CheckBox
            android:id="@+id/checkbox_Prop"
            style="@style/CheckBox"
            android:layout_width="268dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:hint="@string/proprietario"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_Genero" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cad"
            style="@style/Button"
            android:text="@string/alterar"
            app:layout_constraintBottom_toBottomOf="@+id/containerComponentes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkbox_Prop" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
