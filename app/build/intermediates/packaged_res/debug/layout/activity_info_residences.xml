<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="br.edu.ifsp.tcc.apprepublic.view.InfoResidences">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_fot"
            android:layout_width="194dp"
            android:layout_height="186dp"
            android:layout_marginTop="64dp"
            android:src="@drawable/ic_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/containerComponentes"
            style="@style/ConteinerComponents"
            android:layout_width="352dp"
            android:layout_height="859dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_fot"
            app:layout_constraintVertical_bias="0.101" />

        <TextView
            android:id="@+id/text_titulo_label"
            android:layout_width="91dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="Título:"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/containerComponentes"
            app:layout_constraintStart_toStartOf="@+id/containerComponentes"
            app:layout_constraintTop_toTopOf="@id/containerComponentes" />

        <TextView
            android:id="@+id/text_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Nome da Residência"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/containerComponentes"
            app:layout_constraintStart_toStartOf="@+id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@+id/text_titulo_label" />

        <TextView
            android:id="@+id/text_descricao_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Descrição:"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/containerComponentes"
            app:layout_constraintStart_toStartOf="@+id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@+id/text_titulo" />

        <TextView
            android:id="@+id/text_descricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Descrição da Residência"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/containerComponentes"
            app:layout_constraintStart_toStartOf="@+id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@+id/text_descricao_label" />

        <TextView
            android:id="@+id/text_tipo_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Tipo:"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/containerComponentes"
            app:layout_constraintStart_toStartOf="@+id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@+id/text_descricao" />

        <TextView
            android:id="@+id/text_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Tipo de Residência"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/containerComponentes"
            app:layout_constraintStart_toStartOf="@+id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@+id/text_tipo_label" />

        <TextView
            android:id="@+id/text_prec_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Preço:"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/containerComponentes"
            app:layout_constraintStart_toStartOf="@+id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@+id/text_email" />

        <TextView
            android:id="@+id/text_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Preço"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/containerComponentes"
            app:layout_constraintStart_toStartOf="@+id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@+id/text_prec_label" />

        <TextView
            android:id="@+id/text_endereco_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Endereço:"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/containerComponentes"
            app:layout_constraintStart_toStartOf="@+id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@+id/text_tel" />


        <TextView
            android:id="@+id/text_endereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Endereço da Residência"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/containerComponentes"
            app:layout_constraintStart_toStartOf="@+id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@+id/text_endereco_label" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRequest"
            style="@style/Button"
            android:layout_width="286dp"
            android:layout_height="75dp"
            android:text="Solicitar"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/containerComponentes"
            app:layout_constraintEnd_toEndOf="@+id/containerComponentes"
            app:layout_constraintStart_toStartOf="@+id/containerComponentes"
            app:layout_constraintTop_toBottomOf="@+id/text_endereco" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
